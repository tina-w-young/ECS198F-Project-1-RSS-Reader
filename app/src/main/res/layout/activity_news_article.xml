<?xml version="1.0" encoding="utf-8"?>


<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_article_entry"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/article_date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/article_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="35dp"
                android:textStyle="bold"
                android:textColor="@color/black"/>

            <ImageView
                android:id="@+id/article_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/un_logo" />

            <TextView
                android:id="@+id/article_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="23dp"
                android:textColor="@color/black"
                android:textFontWeight="400"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom">

                <Button
                    android:id="@+id/article_link2"
                    android:layout_width="match_parent"
                    android:layout_height="80dp"
                    android:autoLink="all"
                    android:background="@color/bluevioletpurple"
                    android:paddingLeft="12dp"
                    android:text="VISIT WEBSITE"
                    android:textAlignment="viewStart"
                    android:textColor="@color/white"
                    android:textSize="20dp" />

                <Button
                    android:id="@+id/article_link"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_alignTop="@id/article_link2"
                    android:layout_alignRight="@id/article_link2"
                    android:layout_gravity="end"
                    android:layout_marginTop="-20dp"
                    android:autoLink="all"
                    android:background="@mipmap/ic_open_link_round" />

            </RelativeLayout>

        </LinearLayout>
    </ScrollView>

</LinearLayout>